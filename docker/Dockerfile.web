# Build stage - compiles TypeScript and builds the React app
FROM node:20-alpine AS builder

# Build arguments for cloud mode deployment
ARG VITE_BASE_PATH=/
ARG VITE_CLOUD_MODE=false

RUN corepack enable && corepack prepare pnpm@9.14.2 --activate

WORKDIR /app

# Copy package files for dependency installation
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml turbo.json ./
COPY packages/shared/package.json ./packages/shared/
COPY packages/typescript-config/ ./packages/typescript-config/
COPY packages/eslint-config/ ./packages/eslint-config/
COPY apps/web/package.json ./apps/web/

# Install all dependencies (including devDependencies for build)
RUN pnpm install --frozen-lockfile

# Copy source code
COPY packages/shared/ ./packages/shared/
COPY apps/web/ ./apps/web/

# Pass build args as env vars for Vite
ENV VITE_BASE_PATH=$VITE_BASE_PATH
ENV VITE_CLOUD_MODE=$VITE_CLOUD_MODE

# Build the web app (and its dependencies)
RUN pnpm turbo build --filter=@openframe/web...

# Production stage - nginx serving static files
FROM nginx:alpine AS runner

# Default API upstream (override with -e API_URL=http://your-api:3001)
ENV API_URL=http://api:3001

# Copy nginx config template (envsubst replaces ${API_URL} at startup)
COPY docker/nginx.conf.template /etc/nginx/templates/default.conf.template

# Copy built static files from builder
COPY --from=builder /app/apps/web/dist /usr/share/nginx/html

EXPOSE 80

# nginx:alpine docker-entrypoint.sh auto-runs envsubst on /etc/nginx/templates/*.template
# Only shell env vars (like API_URL) get substituted; nginx vars ($host etc.) are untouched

CMD ["nginx", "-g", "daemon off;"]
