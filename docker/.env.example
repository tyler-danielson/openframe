# =============================================================================
# IMPORTANT: Change ALL values below before deploying to production!
# Generate secrets with: openssl rand -hex 32
# =============================================================================

# Database credentials (REQUIRED - change from defaults!)
POSTGRES_USER=openframe
POSTGRES_PASSWORD=CHANGE_ME_TO_A_SECURE_PASSWORD
POSTGRES_DB=openframe

# Security secrets (REQUIRED - generate with: openssl rand -hex 32)
JWT_SECRET=your-32-char-minimum-jwt-secret-here
COOKIE_SECRET=your-32-char-minimum-cookie-secret
ENCRYPTION_KEY=your-64-char-hex-encryption-key-for-aes-256

# Google OAuth (https://console.cloud.google.com/)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3001/api/v1/auth/oauth/google/callback

# Microsoft OAuth (https://portal.azure.com/)
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_REDIRECT_URI=http://localhost:3001/api/v1/auth/oauth/microsoft/callback

# Telegram Bot (https://t.me/BotFather)
TELEGRAM_BOT_TOKEN=

# Bot API key (generate with: openssl rand -hex 32)
BOT_API_KEY=

# Home Assistant (optional)
HOME_ASSISTANT_URL=
HOME_ASSISTANT_TOKEN=
